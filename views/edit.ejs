<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/secondHead.ejs') %>
    <title>Edit page</title>
</head>

<body>
    <!-- ============= CONTAINER ============== -->
    <div class="container">
      <!-- sidebar -->
      <div class="sidebar"></div>
      <!-- registration container -->
      <div class="newItem">
        <h1>Edit Item</h1>
        <!-- START FORM -->
        <form action="/products/<%= product._id%>?_method=PUT" method="POST">
          <!-- fieldset for account info -->
          <fieldset class="account-info">
            <!-- legend for account info -->
            <legend>ITEM INFORMATION</legend>
              <!-- name -->
              <label for="name">NAME</label>
              <input type="text" name="name" value="<%= product.name%>"/>
              <!-- price -->
              <label for="price">PRICE</label>
              <input type="number" name="price" placeholder="Enter price" value="<%= product.price%>">
              
              <!-- quantity -->
              <label for="qty">QUANTITY</label>
              <input type="number" name="qty" placeholder="Enter quantity" value="<%= product.qty%>"/>
              
              <!-- image -->
              
              <label for="img">IMAGE</label>
              <input type="text" name="img" accept="image/png, image/jpg" value="<%= product.img%>"/>
              
          </fieldset>
          <!-- fieldset for profile info -->
          <fieldset class="profile-info">
            <!-- legend for profile info -->
            <!-- <legend></legend> -->
              <!-- biography -->
              <label for="description">DESCRIPTION</label>
              <!-- textarea for larger bodies of text -->
              <textarea name="description" placeholder="Tell us about your item here !"><%= product.description%></textarea>
          </fieldset>
          <!-- submit button -->
          <input type="submit" value="ADD ITEM">
        </form>
      </div>
    </div>
  </body>
</html>
